<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="20dp"
    android:paddingEnd="24dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/wizardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:text="@string/rocketdry_add_external_log_title"
        android:textColor="@color/dark_text_rp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="@color/light_border" />

    <LinearLayout
        android:id="@+id/areaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rocketdry_area_label"
                android:textColor="@color/light_text_rp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/areaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_text_rp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Unknown area" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changeAreaButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rocketdry_change_area"
                android:textAllCaps="false"
                android:textColor="@color/main_purple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/renameAreaButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rocketdry_rename_area"
                android:textAllCaps="false"
                android:textColor="@color/main_purple" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/previousStepButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rocketdry_back"
        android:textAllCaps="false"
        android:textColor="@color/main_purple"
        app:icon="@drawable/chevron_left"
        app:iconGravity="textStart"
        app:iconPadding="6dp"
        app:iconTint="@color/main_purple" />

        <TextView
            android:id="@+id/stepPosition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/light_text_rp"
            android:textSize="12sp"
            tools:text="Step 1 of 4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextStepButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rocketdry_next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/main_purple"
        app:icon="@drawable/icon_chevron_right"
        app:iconGravity="textEnd"
        app:iconPadding="6dp"
        app:iconTint="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/stepLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textColor="@color/icon_colour"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Relative Humidity" />

    <TextView
        android:id="@+id/stepPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/main_purple"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="- %" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/stepInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:hint="@string/rocketdry_relative_humidity_label"
        android:maxWidth="320dp"
        android:minWidth="220dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/stepInput"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelWizardButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/light_text_rp" />

</LinearLayout>
