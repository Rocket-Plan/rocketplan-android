<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/light_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/damageSeverityChip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:chipEndPadding="8dp"
                app:chipStartPadding="8dp"
                app:chipStrokeColor="@color/light_border"
                app:chipStrokeWidth="0dp"
                tools:text="High" />

            <TextView
                android:id="@+id/damageUpdatedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/light_text_rp"
                android:textSize="12sp"
                tools:text="Updated Jan 12" />
        </LinearLayout>

        <TextView
            android:id="@+id/damageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_text_rp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Ceiling water damage" />

        <TextView
            android:id="@+id/damageDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/light_text_rp"
            android:textSize="14sp"
            tools:text="Active staining and bubbling near the north corner." />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
