<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Project Address Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/projectAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/dark_text_rp"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="201 Faker Road" />

                <ImageButton
                    android:id="@+id/editAddressButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/edit_address"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/icon_colour" />

            </LinearLayout>

            <!-- Equipment/Moisture Toggle -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroup"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="16dp"
                android:padding="4dp"
                app:checkedButton="@id/equipmentButton"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.RocketPlan.SegmentedButton"
                    android:id="@+id/equipmentButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/equipment"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.RocketPlan.SegmentedButton"
                    android:id="@+id/moistureButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/moisture"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/light_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/roomCard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_icon_circle_purple"
                                android:contentDescription="@string/room"
                                android:padding="18dp"
                                android:src="@drawable/img_add_room" />

                            <ImageView
                                android:layout_width="@dimen/rocketdry_add_button_size"
                                android:layout_height="@dimen/rocketdry_add_button_size"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/bg_add_circle_purple"
                                android:contentDescription="@string/rocketdry_add"
                                android:padding="@dimen/rocketdry_add_button_padding"
                                android:src="@drawable/ic_add"
                                app:tint="@color/white" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/room"
                            android:textColor="@color/dark_text_rp"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_border" />

                    <LinearLayout
                        android:id="@+id/exteriorSpaceCard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_icon_circle_purple"
                                android:contentDescription="@string/exterior_space"
                                android:padding="18dp"
                                android:src="@drawable/img_add_exterior" />

                            <ImageView
                                android:layout_width="@dimen/rocketdry_add_button_size"
                                android:layout_height="@dimen/rocketdry_add_button_size"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/bg_add_circle_purple"
                                android:contentDescription="@string/rocketdry_add"
                                android:padding="@dimen/rocketdry_add_button_padding"
                                android:src="@drawable/ic_add"
                                app:tint="@color/white" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exterior_space"
                            android:textColor="@color/dark_text_rp"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/equipmentContentGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/rocketdry_equipment_list_title"
                    android:textColor="@color/dark_text_rp"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/equipmentTotalsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@color/light_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rocketdry_equipment_overview"
                            android:textColor="@color/dark_text_rp"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/equipmentTotalCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/main_purple"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:text="12 total units" />

                        <TextView
                            android:id="@+id/equipmentStatusBreakdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/light_text_rp"
                            android:textSize="14sp"
                            tools:text="10 active | 1 removed | 1 damaged" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/rocketdry_open"
                            android:textAllCaps="false"
                            android:textColor="@color/main_purple"
                            android:textSize="16sp"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/main_purple"
                            app:strokeWidth="1dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="@color/light_border" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/equipmentLocationsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_equipment_level" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/moistureContentGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- External Atmospheric Log Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/atmosphericSectionTitle"
                    android:text="@string/external_atmospheric_log"
                    android:textColor="@color/dark_text_rp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/addExternalLogButton"
                        android:layout_width="@dimen/rocketdry_add_button_size"
                        android:layout_height="@dimen/rocketdry_add_button_size"
                        android:background="@drawable/bg_add_button"
                        android:contentDescription="@string/add_log"
                    android:padding="@dimen/rocketdry_add_button_padding"
                    android:src="@drawable/ic_add"
                    app:tint="@color/main_purple" />

                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/atmosphericRoomFilterContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:scrollbars="none"
                    android:visibility="gone">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/atmosphericRoomFilterGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp"
                        app:selectionRequired="false"
                        app:singleSelection="true" />

                </HorizontalScrollView>

                <!-- Atmospheric Log RecyclerView -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/atmosphericEmptyStateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rocketdry_start_atmospheric_log_title"
                            android:textColor="@color/dark_text_rp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/startAtmosphericLogButton"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/rocketdry_start_atmospheric_log_cta"
                            android:textAllCaps="false"
                            android:textColor="@color/main_purple"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/main_purple"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/atmosphericLogsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_atmospheric_log" />

                <!-- Locations by Level Section -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/locationsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_location_level" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
