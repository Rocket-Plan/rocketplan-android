<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <!-- Room Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/roomIcon"
            android:layout_width="@dimen/icon_size_tab"
            android:layout_height="@dimen/icon_size_tab"
            android:contentDescription="@string/room_icon"
            tools:src="@drawable/icon_room_living" />

        <TextView
            android:id="@+id/roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/dark_text_rp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Den 4" />

    </LinearLayout>

    <!-- Equipment List for this Room -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomEquipmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:nestedScrollingEnabled="false"
        tools:itemCount="1"
        tools:listitem="@layout/item_room_equipment" />

</LinearLayout>
