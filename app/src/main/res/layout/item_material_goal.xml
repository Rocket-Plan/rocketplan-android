<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/light_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/goalIcon"
            android:layout_width="@dimen/icon_size_card_large"
            android:layout_height="@dimen/icon_size_card_large"
            android:background="@drawable/bg_icon_circle_purple"
            android:contentDescription="@string/location_icon"
            android:padding="12dp"
            android:src="@drawable/ic_material" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/dark_text_rp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Drywall" />

            <TextView
                android:id="@+id/goalTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/main_purple"
                android:textSize="12sp"
                tools:text="Target 12%" />

            <TextView
                android:id="@+id/goalUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/light_text_rp"
                android:textSize="10sp"
                tools:text="Updated Mar 6, 3:30pm" />
        </LinearLayout>

        <TextView
            android:id="@+id/goalLogsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/light_text_rp"
            android:textSize="10sp"
            tools:text="2 logs" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
