<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Entity Type Icon -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_circle_yellow"
            android:padding="8dp">

            <ImageView
                android:id="@+id/entityIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_dialog_alert"
                android:contentDescription="@string/conflict_entity_icon_description"
                app:tint="@color/secondary_yellow" />

        </FrameLayout>

        <!-- Conflict Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/entityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/dark_text_rp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Living Room" />

            <TextView
                android:id="@+id/projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/light_text_rp"
                android:textSize="11sp"
                tools:text="123 Main Street" />

            <TextView
                android:id="@+id/conflictTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/placeholder"
                android:textSize="10sp"
                tools:text="Detected 5 minutes ago" />

        </LinearLayout>

        <!-- Entity Type Badge -->
        <TextView
            android:id="@+id/entityTypeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_status_chip"
            android:backgroundTint="@color/severity_medium_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textAllCaps="true"
            android:textColor="@color/secondary_yellow"
            android:textSize="9sp"
            android:textStyle="bold"
            tools:text="ROOM" />

        <!-- Chevron -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@null"
            app:tint="@color/placeholder" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
