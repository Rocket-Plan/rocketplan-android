<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="10dp"
    android:paddingHorizontal="12dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/fullScopeCheckBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:focusable="false"
        android:clickable="false"
        app:useMaterialThemeColors="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fullScopeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="WTRESRVD – Emergency service call - during business hours" />

        <TextView
            android:id="@+id/fullScopeMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/light_text_rp"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="EA • Service Call • $245.00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fullScopeMinus"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="-"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fullScopeQuantity"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fullScopePlus"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="+"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
