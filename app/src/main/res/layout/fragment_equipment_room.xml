<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/equipmentProjectAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_text_rp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="201 Faker Road" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/equipmentRoomIcon"
                    android:layout_width="@dimen/icon_size_tile"
                    android:layout_height="@dimen/icon_size_tile"
                    android:background="@drawable/bg_icon_circle_purple"
                    android:contentDescription="@string/room"
                    android:padding="14dp"
                    android:src="@drawable/image_equipment" />

                <TextView
                    android:id="@+id/equipmentRoomTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/dark_text_rp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="Basement" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addEquipmentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_dashed_border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="14dp">

                <ImageView
                    android:layout_width="@dimen/icon_size_card_large"
                    android:layout_height="@dimen/icon_size_card_large"
                    android:background="@drawable/bg_icon_circle_purple"
                    android:contentDescription="@string/equipment_room_add_cta"
                    android:padding="12dp"
                    android:src="@drawable/air_scrubber" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment_room_add_cta"
                        android:textColor="@color/dark_text_rp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/equipmentEmptyHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rocketdry_no_equipment"
                        android:textColor="@color/light_text_rp"
                        android:textSize="12sp"
                        tools:text="Add equipment for this room" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/equipmentListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/rocketdry_equipment_by_room"
                android:textColor="@color/dark_text_rp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/roomEquipmentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                tools:itemCount="1"
                tools:listitem="@layout/item_room_equipment" />

            <TextView
                android:id="@+id/equipmentEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="@string/equipment_room_empty"
                android:textColor="@color/light_text_rp"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
