<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/light_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/equipmentRoomIcon"
            android:layout_width="@dimen/icon_size_section"
            android:layout_height="@dimen/icon_size_section"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_icon_circle_purple"
            android:contentDescription="@string/room"
            android:padding="16dp"
            android:src="@drawable/ic_material"
            app:tint="@color/icon_colour" />

        <TextView
            android:id="@+id/equipmentRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@color/dark_text_rp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Basement" />

        <TextView
            android:id="@+id/equipmentRoomSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_text_rp"
            android:textSize="15sp"
            tools:text="2 Dehumidifiers, 3 Air Movers" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
