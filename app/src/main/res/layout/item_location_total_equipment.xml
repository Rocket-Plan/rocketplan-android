<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/light_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <!-- Equipment Icon -->
        <ImageView
            android:id="@+id/equipmentTypeIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/equipment"
            android:padding="8dp"
            tools:src="@drawable/image_equipment" />

        <!-- Type Label and Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipment_room_type_label"
                android:textColor="@color/light_text_rp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/equipmentTypeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_text_rp"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="Air Mover" />

        </LinearLayout>

        <!-- Count -->
        <TextView
            android:id="@+id/equipmentTypeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/dark_text_rp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="4" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
