<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.login.LoginFragment">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingTop="40dp"
            android:paddingBottom="32dp">

            <!-- RocketPlan Logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_horizontal"
                android:contentDescription="RocketPlan Logo"
                android:adjustViewBounds="true"
                android:maxHeight="60dp" />

            <!-- Telescope Illustration -->
            <ImageView
                android:id="@+id/telescopeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:src="@drawable/telescope"
                android:contentDescription="Telescope Illustration"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="Sign Up Or Sign In"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Please enter your email. We'll use it to either create your account or sign you in."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1.2" />

            <!-- Email Input Label -->
            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Email Address"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="email@example.com"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray" />

            <!-- Email Input Underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- OR Divider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="OR"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Google Sign-In Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/googleSignInButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="16dp"
                app:icon="@drawable/logo_google"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="40dp"
                app:cornerRadius="12dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/main_purple"
                app:backgroundTint="@color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/errorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/warning_red"
                android:textSize="14sp"
                android:visibility="gone"
                android:textAlignment="center"
                tools:text="Sign in failed"
                tools:visibility="visible" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:indeterminateTint="@color/main_purple"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
