<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/projectLandingScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/projectInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/light_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/projectStatusContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_wip_badge"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="12dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="4dp">

                            <TextView
                                android:id="@+id/projectStatusBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/team_member_tag_dark"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                tools:text="WIP" />

                            <ImageView
                                android:layout_width="@dimen/icon_size_chevron"
                                android:layout_height="@dimen/icon_size_chevron"
                                android:layout_marginStart="4dp"
                                android:contentDescription="@string/change_project_status"
                                android:src="@drawable/ic_chevron_down"
                                android:tint="@color/team_member_tag_dark" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/menuButton"
                            android:layout_width="@dimen/icon_size_action"
                            android:layout_height="@dimen/icon_size_action"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/menu"
                            android:src="@drawable/ic_more_vert"
                            app:tint="@color/icon_colour" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/projectTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="201 Faker Road" />

                    <TextView
                        android:id="@+id/projectAliasAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/main_purple"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Add Alias" />

                    <TextView
                        android:id="@+id/projectCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/light_text_rp"
                        android:textSize="12sp"
                        tools:text="RP-25-1156" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/projectEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/light_text_rp"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="@string/loading_project" />

            <LinearLayout
                android:id="@+id/projectActionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:showDividers="none">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addProjectInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="@dimen/icon_size_list_container"
                            android:layout_height="@dimen/icon_size_list_container"
                            android:background="@drawable/bg_icon_circle_purple"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/addProjectInfoIcon"
                                android:layout_width="@dimen/icon_size_list_large"
                                android:layout_height="@dimen/icon_size_list_large"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_property" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_project_info_title"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/add_project_info_subtitle"
                                android:textColor="@color/light_text_rp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rocketScanCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="@dimen/icon_size_list_container"
                            android:layout_height="@dimen/icon_size_list_container"
                            android:background="@drawable/bg_icon_circle_purple"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/rocketScanIcon"
                                android:layout_width="@dimen/icon_size_list_large"
                                android:layout_height="@dimen/icon_size_list_large"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_photo" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rocket_scan_title"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/rocket_scan_subtitle"
                                android:textColor="@color/light_text_rp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/allNotesCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="@dimen/icon_size_list_container"
                            android:layout_height="@dimen/icon_size_list_container"
                            android:background="@drawable/bg_icon_circle_purple"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/allNotesIcon"
                                android:layout_width="@dimen/icon_size_list_large"
                                android:layout_height="@dimen/icon_size_list_large"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_all_project_notes" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/all_project_notes_title"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/allNotesSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/light_text_rp"
                                android:textSize="12sp"
                                tools:text="@string/project_notes_subtitle" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rocketDryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="@dimen/icon_size_list_container"
                            android:layout_height="@dimen/icon_size_list_container"
                            android:background="@drawable/bg_icon_circle_purple"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/rocketDryIcon"
                                android:layout_width="@dimen/icon_size_list_large"
                                android:layout_height="@dimen/icon_size_list_large"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_water_drop"
                                android:tint="@color/white" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RocketDry"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Log and manage your drying progress."
                                android:textColor="@color/light_text_rp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/crewCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="@dimen/icon_size_list_container"
                            android:layout_height="@dimen/icon_size_list_container"
                            android:background="@drawable/bg_icon_circle_purple"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/crewIcon"
                                android:layout_width="@dimen/icon_size_list_large"
                                android:layout_height="@dimen/icon_size_list_large"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/crew" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crew"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Add and dispatch crew members"
                                android:textColor="@color/light_text_rp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
