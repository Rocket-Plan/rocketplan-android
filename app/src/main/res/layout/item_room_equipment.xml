<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    app:cardBackgroundColor="@color/light_purple"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/light_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/equipmentIcon"
                android:layout_width="@dimen/icon_size_tile"
                android:layout_height="@dimen/icon_size_tile"
                android:background="@drawable/bg_icon_circle_purple"
                android:contentDescription="@string/equipment_room_add_cta"
                android:padding="14dp"
                android:src="@drawable/image_equipment" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/equipment_room_type_label"
                    android:textColor="@color/light_text_rp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/equipmentTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/dark_text_rp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Air Mover" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/deleteEquipmentButton"
                android:layout_width="@dimen/icon_size_action"
                android:layout_height="@dimen/icon_size_action"
                android:background="@drawable/bg_circle_semi_transparent"
                android:contentDescription="@string/equipment_room_delete"
                android:padding="10dp"
                android:src="@drawable/icon_trash"
                android:tint="@color/secondary_purple" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/equipment_room_units"
                android:textColor="@color/secondary_purple"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/quantityMinusButton"
                    android:layout_width="@dimen/icon_size_action"
                    android:layout_height="@dimen/icon_size_action"
                    android:background="@drawable/bg_icon_circle_light"
                    android:contentDescription="@string/rocketdry_remove"
                    android:padding="10dp"
                    android:src="@drawable/icon_xmark"
                    android:tint="@color/main_purple" />

                <TextView
                    android:id="@+id/equipmentQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:textColor="@color/dark_text_rp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="1" />

                <ImageButton
                    android:id="@+id/quantityPlusButton"
                    android:layout_width="@dimen/icon_size_action"
                    android:layout_height="@dimen/icon_size_action"
                    android:background="@drawable/bg_icon_circle_purple"
                    android:contentDescription="@string/rocketdry_add"
                    android:padding="10dp"
                    android:src="@drawable/icon_circle_plus"
                    android:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipment_room_day_in"
                android:textColor="@color/main_purple"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startDateButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/main_purple"
                android:textSize="14sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="12dp"
                tools:text="27-09-2025" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/equipment_room_day_out"
                android:textColor="@color/main_purple"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/endDateButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/main_purple"
                android:textSize="14sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="12dp"
                tools:text="28-09-2025" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipment_room_days"
                android:textColor="@color/main_purple"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/equipmentDayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/dark_text_rp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="3" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
