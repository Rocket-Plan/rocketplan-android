<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conflictBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:visibility="gone"
    app:cardBackgroundColor="@color/severity_medium_bg"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/secondary_yellow"
    app:strokeWidth="1dp"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/conflictIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_icon_circle_yellow"
            android:contentDescription="@string/conflict_banner_icon_description"
            android:padding="6dp"
            android:src="@android:drawable/ic_dialog_alert"
            app:tint="@color/secondary_yellow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/conflictTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conflict_banner_title"
                android:textColor="@color/dark_text_rp"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conflictSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/light_text_rp"
                android:textSize="10sp"
                tools:text="1 conflict needs resolution" />

        </LinearLayout>

        <TextView
            android:id="@+id/conflictReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_status_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="@string/conflict_banner_review"
            android:textAllCaps="false"
            android:textColor="@color/secondary_yellow"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
